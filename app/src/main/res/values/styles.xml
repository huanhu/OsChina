    <!--radiobutton的点击-->
    <style name="radiobuttonStyle" parent="AppTheme">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@drawable/selector_widget_bar_text</item>
    </style>

    <!--菜单textviewStyle-->
    <style name="menuTextviewStyle" parent="AppTheme">
        <item name="android:background">@drawable/list_layout_item_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@drawable/selector_drawer_menu_text</item>
    </style>

    <!--菜单buttomStyle-->
    <style name="menuButtomStyle" parent="AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@drawable/selector_drawer_menu_text</item>
    </style>

    <!-- 自定义一个dialog样式 继承系统的dialog样式 -->
    <style name="CenterDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <!-- 去标题栏 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 背景白色 -->
        <item name="android:windowAnimationStyle">@style/AnimationAddrStyle</item>
        <!-- 显示和消失的动画 -->
    </style>

    <style name="AnimationAddrStyle">
        <item name="android:windowEnterAnimation">@anim/addr_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/addr_dialog_exit</item>
    </style>

</resources>
