<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:id="@+id/tv_item_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Elasticsearch 1.7.0/1.6.1 发布，分布式搜索引擎"
        android:textColor="@color/titlecolor"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_item_message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:text="Elasticsearch 1.7.0/1.6.1 发布，分布式搜索引擎"
        android:textColor="@color/text_gray"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="oschina"
            android:textColor="@color/text_gray"
            android:textSize="13sp"
            />

        <TextView
            android:id="@+id/tv_item_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="5dp"
            android:text="oschina"
            android:textColor="@color/text_gray"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/tv_item_message_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_comment_count"
            android:drawablePadding="5dp"
            android:text="oschina"
            android:textColor="@color/text_gray"
            android:textSize="15sp"
            />
    </LinearLayout>

</LinearLayout>